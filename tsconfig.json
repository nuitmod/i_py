{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "modules"],
  "downlevelIteration": true
}